<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AzureCliLoginApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="AzureCliLoginApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Azure CLI Login"
        Width="900" Height="600">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   Text="Azure CLI Login" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Login Type Selection -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
            <TextBlock Text="Select Login Method:" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Device Code Login" 
                        Command="{Binding LoginWithDeviceCodeCommand}"
                        IsEnabled="{Binding !IsLoginInProgress}"
                        Width="140"/>
                <Button Content="Interactive Login" 
                        Command="{Binding LoginInteractiveCommand}"
                        IsEnabled="{Binding !IsLoginInProgress}"
                        Width="130"/>
                <Button Content="Check Status" 
                        Command="{Binding CheckLoginStatusCommand}"
                        IsEnabled="{Binding !IsLoginInProgress}"
                        Width="110"/>
                <Button Content="Refresh Resources" 
                        Command="{Binding RefreshResourcesCommand}"
                        IsEnabled="{Binding !IsLoginInProgress}"
                        Width="130"/>
            </StackPanel>
        </StackPanel>

        <!-- Status and IP Address -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               TextWrapping="Wrap"
                               Foreground="{Binding StatusColor}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Your IPv4 Address:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding UserIpAddress}" 
                               FontFamily="Consolas,Courier New,monospace"
                               FontSize="12"
                               Foreground="#2980b9"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Left Column: Output Log -->
        <Border Grid.Row="3" Grid.Column="0"
                BorderBrush="Gray" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Command Output" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ScrollViewer Grid.Row="1">
                    <TextBlock Text="{Binding OutputLog}" 
                               TextWrapping="Wrap"
                               FontFamily="Consolas,Courier New,monospace"
                               FontSize="11"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Right Column: Resources -->
        <Border Grid.Row="3" Grid.Column="2"
                BorderBrush="Gray" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Virtual Machines Section -->
                <TextBlock Grid.Row="0" Text="Virtual Machines" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ScrollViewer Grid.Row="1" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding VirtualMachines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding ResourceGroup, StringFormat='RG: {0}'}" 
                                                   FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Location, StringFormat='Location: {0}'}" 
                                                   FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Network Security Groups Section -->
                <TextBlock Grid.Row="2" Text="Network Security Groups" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ScrollViewer Grid.Row="3" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding NetworkSecurityGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding ResourceGroup, StringFormat='RG: {0}'}" 
                                                   FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Location, StringFormat='Location: {0}'}" 
                                                   FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Inbound Security Rules Section -->
                <TextBlock Grid.Row="4" Text="Inbound Port Rules" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ScrollViewer Grid.Row="5">
                    <ItemsControl ItemsSource="{Binding InboundSecurityRules}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock FontSize="10" Foreground="Gray">
                                            <Run Text="Port: "/>
                                            <Run Text="{Binding DestinationPortRange}" FontWeight="SemiBold"/>
                                            <Run Text=" | Protocol: "/>
                                            <Run Text="{Binding Protocol}"/>
                                            <Run Text=" | Access: "/>
                                            <Run Text="{Binding Access}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding NsgName, StringFormat='NSG: {0}'}" 
                                                   FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding SourceAddressPrefix, StringFormat='Source: {0}'}" 
                                                   FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Clear and Logout Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
            <Button Content="Clear Output" 
                    Command="{Binding ClearOutputCommand}"
                    Width="120"/>
            <Button Content="Logout" 
                    Command="{Binding LogoutCommand}"
                    IsEnabled="{Binding !IsLoginInProgress}"
                    Width="120"/>
        </StackPanel>
    </Grid>

</Window>
